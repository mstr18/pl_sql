--Função ORACLE

create or replace FUNCTION FUNC_OBTER_INICIAIS(P_NOME VARCHAR2)
RETURN VARCHAR2
IS
P_QT_INICIAIS NUMBER(2);
P_POSICAO NUMBER(2);
P_INICIAIS VARCHAR2(10);
BEGIN

P_QT_INICIAIS := LENGTH(P_NOME) - LENGTH(REPLACE(P_NOME,' ',''));
P_INICIAIS := SUBSTR(P_NOME,1,1);
P_POSICAO := 1;

WHILE P_QT_INICIAIS >= P_POSICAO
  LOOP      
    P_INICIAIS := P_INICIAIS||SUBSTR(P_NOME,INSTR(P_NOME,' ',1,P_POSICAO)+1,1);
    P_POSICAO := P_POSICAO +1;                
  END LOOP;


RETURN UPPER(P_INICIAIS);

END;
